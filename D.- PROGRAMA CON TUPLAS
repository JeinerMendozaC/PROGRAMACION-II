print("##  TUPLAS  ##")
TUPLA=tuple(input("INGRESE UNA TUPLA:"))
print("####################################")
print("LOS ELEMENTOS DE SU TUPLA SON:")
for i in TUPLA:
    print(i)
LONGITUD=len(TUPLA)
print("####################################")
print("LA LONGITUD DE SU TUPLA INGRESASDA ES:",LONGITUD)
print("####################################")
BUSQUEDA=int(input("INGRESE LA POSICION DE UN ELEMENTO DE LA TUPLA:"))
if BUSQUEDA>=0 and BUSQUEDA<=LONGITUD:
    ELE=TUPLA[BUSQUEDA]
    print("####################################")
    print(ELE,"SE ENCUENTRA EN LA POSICION",BUSQUEDA)
    print("####################################")
else:
    print("####################################")
    print("FUERA DE RANGO")
    print("####################################")
LETRA=input("INGRESE UN ELEMENTO DE SU TUPLA QUE DESEA VER SUS OCURRENCIAS:")
if LETRA in TUPLA:
    CONTEO=TUPLA.count(LETRA)
    print("####################################")
    print("LAS OCURRENCIAS DE",LETRA,"EN LA TUPLA ES",CONTEO)
    print("####################################")
    print("###  EL PROGRAMA A FINALIZADO   ####")
    print("####################################")
else:
    print("####################################")
    print("ESTE ELEMENTO NO ESTA EN LA TUPLA")
    print("####################################")
    print("EL PROGRAMA A FINALIZADO")
    print("####################################")
